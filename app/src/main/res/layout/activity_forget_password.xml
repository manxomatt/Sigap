<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_white"
    android:fitsSystemWindows="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        tools:ignore="UselessParent">

        <!-- Title -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:text="Password Request"
                android:textSize="12pt"
                android:textStyle="normal"
                android:textAlignment="gravity"
                android:drawableTop="@drawable/unlock_left"
                android:gravity="center_vertical|center"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="35dp"
                android:id="@+id/label_title"
                android:layout_weight="1"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        </TableRow>
        <!-- End of Title -->

        <!-- Nomor KTP -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Nomor KTP"
                android:textSize="6.5pt"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="25dp"
                android:id="@+id/label_nomorktp"
                android:layout_weight="1"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <EditText
                android:layout_marginStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:maxLength="16"
                android:inputType="number"
                android:text=""
                android:textAlignment="center"
                android:textSize="8pt"
                android:textStyle="normal"
                android:ems="10"
                android:id="@+id/text_nomorktp"
                android:hint=""
                android:layout_weight="1"
                tools:ignore="TextFields" />
        </TableRow>
        <!-- End of Nomor KTP -->

        <!-- Email -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Email"
                android:textSize="6.5pt"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="25dp"
                android:id="@+id/label_email"
                android:layout_weight="1"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <EditText
                android:layout_marginStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:inputType="textEmailAddress"
                android:text=""
                android:textAlignment="center"
                android:textSize="8pt"
                android:textStyle="normal"
                android:ems="10"
                android:id="@+id/text_email"
                android:hint=""
                android:layout_weight="1"
                tools:ignore="TextFields" />
        </TableRow>
        <!-- End of Email -->

        <!-- Button Submit -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Kembali"
                android:textSize="6pt"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="10dp"
                android:id="@+id/button_back"
                android:layout_weight="1"
                tools:ignore="ButtonStyle,HardcodedText,ObsoleteLayoutParam" />

            <Button
                android:text="Proses"
                android:textSize="6pt"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_marginStart="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="10dp"
                android:id="@+id/button_submit_forget_password"
                android:layout_weight="1"
                tools:ignore="ButtonStyle,HardcodedText,ObsoleteLayoutParam" />

        </TableRow>
        <!-- End of Button Submit -->

    </TableLayout>

</RelativeLayout>