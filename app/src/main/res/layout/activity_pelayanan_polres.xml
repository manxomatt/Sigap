<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pelayanan_polres"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_dashboard_red"
    android:fitsSystemWindows="true"
    tools:context="com.app.sigap.PelayananPolresActivity">

    <RelativeLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_02"
        android:fitsSystemWindows="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/sendbird_arrow_round_left_red"
                android:background="#00000000"
                android:layout_gravity="center|center_vertical"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription,RtlHardcoded" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                tools:ignore="InefficientWeight,RtlHardcoded">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/img_pelayanan_polres"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:scaleType="fitXY"
                        android:id="@+id/label_img_title_live_chat"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/txt_channel_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="10pt"
                        android:textStyle="normal"
                        android:textColor="#ffe100"
                        android:text=" Pelayanan Polres"
                        android:gravity="left|center_vertical"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                </TableRow>

            </RelativeLayout>
            <!--
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/sendbird_btn_setting"
                android:background="#00000000"
                android:layout_gravity="center"
                />
            -->
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp">

        <!-- SKCK , label_img_skck -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/img_skck"
                android:gravity="center|center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/label_img_skck"
                android:layout_weight="0.00"
                tools:ignore="ContentDescription" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00" >

            <TextView
                android:text="S K C K"
                android:textColor="#ffe100"
                android:textSize="12pt"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/label_text_skck"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center|center_vertical"
                android:textIsSelectable="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

        </TableRow>
        <!-- End of SKCK -->

        <!-- Separator -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="0.00"
            tools:ignore="UselessLeaf" />
        <!-- End of separator -->

        <!-- SIM , label_img_sim -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/img_sim"
                android:gravity="center|center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/label_img_sim"
                android:layout_weight="0.00"
                tools:ignore="ContentDescription" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00" >

            <TextView
                android:text="S I M"
                android:textColor="#ffe100"
                android:textSize="12pt"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/label_text_sim"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center|center_vertical"
                android:textIsSelectable="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

        </TableRow>
        <!-- End of SIM -->

        <!-- Separator -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="0.00"
            tools:ignore="UselessLeaf" />
        <!-- End of separator -->

        <!-- SP2HP , label_img_sp2hp -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/img_sp2hp"
                android:gravity="center|center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/label_img_sp2hp"
                android:layout_weight="0.00"
                tools:ignore="ContentDescription" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00" >

            <TextView
                android:text="S P 2 H P"
                android:textColor="#ffe100"
                android:textSize="12pt"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/label_text_sp2hp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center|center_vertical"
                android:textIsSelectable="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

        </TableRow>
        <!-- End of pemadam kebakaran -->

    </LinearLayout>

</RelativeLayout>
